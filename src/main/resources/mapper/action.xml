<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC
        "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<!--用户表的增删改查-->
<mapper namespace="com.xiaojinzi.image.repository.action.ActionMapper">

    <resultMap id="bean" type="com.xiaojinzi.image.bean.Action">
        <id column="id" property="id"/>
        <result column="action" property="action"/>
        <result column="source" property="source"/>
        <result column="sourceCategory" property="sourceCategory"/>
        <result column="target" property="target"/>
        <result column="targetCategory" property="targetCategory"/>
    </resultMap>

    <select id="queryBySourceCategoryAndSource" resultMap="bean">

        select e.* from action e where sourceCategory = #{sourceCategory} and source = #{source}

    </select>

    <insert id="insert" parameterType="com.xiaojinzi.image.bean.Action">

        <selectKey order="AFTER" keyProperty="id" resultType="java.lang.Integer">
            select LAST_INSERT_ID()
        </selectKey>
        insert into
        action(action,source,sourceCategory,target,targetCategory)
        values
        (#{action},#{source},#{sourceCategory},#{target},#{targetCategory})

    </insert>

</mapper>